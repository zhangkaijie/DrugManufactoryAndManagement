<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">root</property>
        <property name="hibernate.connection.url">jdbc:mysql://127.0.0.1:3306/drugManufactoryAndManagement2</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <mapping class="com.drugManufactoryAndManagement.spring.pojo.UserAccount" />
        <mapping class="com.drugManufactoryAndManagement.spring.pojo.Role" />
        <mapping class="com.drugManufactoryAndManagement.spring.pojo.Email" />
        <mapping class="com.drugManufactoryAndManagement.spring.pojo.Patient" />
        <mapping class="com.drugManufactoryAndManagement.spring.pojo.Doctor" />
        <mapping class="com.drugManufactoryAndManagement.spring.pojo.Scientist" />
        <mapping class="com.drugManufactoryAndManagement.spring.pojo.DrugManufactor" />
        <mapping class="com.drugManufactoryAndManagement.spring.pojo.CompoundManufactor" />
        <mapping class="com.drugManufactoryAndManagement.spring.pojo.PatientDoctorInteraction" />
        <mapping class="com.drugManufactoryAndManagement.spring.pojo.DrugManufactorScientistInteraction" />
        <mapping class="com.drugManufactoryAndManagement.spring.pojo.DoctorScientistInteraction" />
        <mapping class="com.drugManufactoryAndManagement.spring.pojo.CompoundDrugInteraction" />
    </session-factory>
</hibernate-configuration>